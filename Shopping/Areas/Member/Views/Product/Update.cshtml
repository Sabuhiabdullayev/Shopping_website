@model Product
@{
    ViewData["Title"] = "Elan Yerləştir";
   Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/ProductAdd/Product.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">

</head>
<body>
    <div class="ContanierProductAdd">
        <h5>Elanı düzənlə</h5>
      <div class="DefaultProductAddAllDiv">
			
        <div class="DefaultProductAdd">
                 <form asp-action="ProductAdd" asp-controller="Product" method="post" enctype="multipart/form-data">
            <div class="InputDiv" id="Category1">
             <b class="InputName">Katalog  </b>
             <select asp-items="ViewBag.catalog"  id="Catalog" class="Input Category1">
                <option>Katalog seçiniz...</option>
            </select>
            <input type="hidden" id="CatalogText" asp-for="Catalog"  />
            </div>
            
            <div class="InputDiv Category2Block" id="Categorys" >
                <b class="InputName">Kategoriya</b>
                 <select class="Input" asp-for="Category2Id" id="Category2">
                  
                 </select>
           
               </div>

               <div class="InputDiv Category3Block" id="Categorys">
             <b class="InputName">Kategoriya</b>

                <select id="Category3"   class="Input">
            
                </select>
                <input type="hidden" id="Category3Text" asp-for="Category1"/>
               </div>
                <div class="InputDiv" >
                <b class="InputName">Şəhər</b>
                <select  asp-for="City" asp-items="ViewBag.City" class="Input">
             <option value="@Model.City">@Model.City</option>
                </select>
              
               </div>

                 <div id="AllInputDiv">
               
                     </div>
           

               <label for="image-input1" class="LabelImg1">Şəkil Elave Et</label>
               <label for="image-input2" class="LabelImg2">Şəkil Elave Et</label>
               <label for="image-input3" class="LabelImg3">Şəkil Elave Et</label>
               <label for="image-input4" class="LabelImg4">Şəkil Elave Et</label>
               <label for="image-input5" class="LabelImg5">Şəkil Elave Et</label>
               <label for="image-input6" class="LabelImg6">Şəkil Elave Et</label>
               <label for="image-input7" class="LabelImg7">Şəkil Elave Et</label>
               <label for="image-input8" class="LabelImg8">Şəkil Elave Et</label>
               <label for="image-input9" class="LabelImg9">Şəkil Elave Et</label>
               <label for="image-input10" class="LabelImg10">Şəkil Elave Et</label>
                 <div class="InputDiv"  id="Img1">
                <b class="InputName">Şəkil</b>
                <input type="file" class="Input ImgInput" name="Image1Url" id="image-input1" accept="image/*">
               </div>
               <div class="InputDiv"  id="Img2">
                <b class="InputName">Şəkil</b>
                <input type="file" class="Input ImgInput" name="Image2Url"  id="image-input2" accept="image/*">
               </div>
               <div class="InputDiv"  id="Img3">
                <b class="InputName">Şəkil</b>
                <input type="file" class="Input ImgInput" name="Image3Url"  id="image-input3" accept="image/*">
               </div>
               <div class="InputDiv"  id="Img4">
                <b class="InputName">Şəkil</b>
                <input type="file" class="Input ImgInput" name="Image4Url"  id="image-input4" accept="image/*">
               </div>
               <div class="InputDiv"  id="Img5">
                <b class="InputName">Şəkil</b>
                <input type="file" class="Input ImgInput" name="Image5Url" id="image-input5"  accept="image/*">
               </div>
               <div class="InputDiv"  id="Img6">
                <b class="InputName">Şəkil</b>
                <input type="file" class="Input ImgInput" name="Image6Url" id="image-input6" accept="image/*">
               </div>
               <div class="InputDiv"  id="Img7">
                <b class="InputName">Şəkil</b>
                <input type="file" class="Input ImgInput" name="Image7Url" id="image-input7" accept="image/*">
               </div>
               <div class="InputDiv"  id="Img8">
                <b class="InputName">Şəkil</b>
                <input type="file" class="Input ImgInput" name="Image8Url" id="image-input8" accept="image/*">
               </div>
               <div class="InputDiv"  id="Img9">
                <b class="InputName">Şəkil</b>
                <input type="file" class="Input ImgInput" name="Image9Url" id="image-input9" accept="image/*">
               </div>
               <div class="InputDiv"  id="Img10">
                <b class="InputName">Şəkil</b>
                <input type="file" class="Input ImgInput" name="Image10Url" id="image-input10" accept="image/*">
               </div>
               <div class="InputDiv">
                <div class="ImgDiv">
                  <div class="row">
                    <div class="card">
                      <img class="card-img-top" id="preview1">
                    </div>
                    <div class="card">
                      <img class="card-img-top" id="preview2">
                    </div>
                   
                    <div class="card">
                      <img class="card-img-top" id="preview3">
                    </div>
                   
                    <div class="card">
                      <img class="card-img-top" id="preview4">
                    </div>
                   
                    <div class="card">
                      <img class="card-img-top" id="preview5">
                    </div>
                   
                    <div class="card">
                      <img class="card-img-top" id="preview6">
                    </div>
                    <div class="card">
                      <img class="card-img-top" id="preview7">
                    </div>
                   
                    <div class="card">
                      <img class="card-img-top" id="preview8">
                    </div>
                   
                    <div class="card">
                      <img class="card-img-top" id="preview9"> 
                    </div>
                    <div class="card">
                      <img class="card-img-top" id="preview10"> 
                    </div>
                  </div>
                </div>
               </div>
        
               <div class="InputDiv">
                <b class="InputName">Haqqında<i class="fa fa-star-of-life"></i></b>
               <textarea cols="37" rows="8" name="Description" class="DescriptionTextArea" required>@Model.Description</textarea>
               </div>
               <div class="InputDiv">
                <b class="InputName"><i class="fa-solid fa-tag"></i>Qiymət<i class="fa fa-star-of-life"></i></b>
                    <input type="number" min="0.00" name="Price" value="@Model.Price" max="9000000.00" step="0.10" class=" PriceInput" placeholder="12.50" required>
                    <select class="PriceSelect" name="PriceCurrency">
                        <option value="₼">₼</option>
                        <option value="$">$</option>
                        <option value="€">€</option>
                    </select>
                   </div>
             
              
          
                        <div class="InputDiv">
                <b class="InputName"><i class="fa-solid fa-phone ProductAddIcon"></i>Telefon</b>
                    <input class="Input" name="Phone" id="phone" 
                    type="tel" 
                
                    value="+994 (__) ___-__-__" 
                    pattern="^\+994(\s+)?\(?(77|70|50|55|51)\)?(\s+)?[0-9]{3}-?[0-9]{2}-?[0-9]{2}$"
                    required>
                   </div>
                        
                   <div class="InputDiv" id="Phone2" >
                    <b class="InputName"><i class="fa-brands fa-whatsapp ProductAddIcon"></i>Watsapp</b>
                    <input id="phone2" class="Input" 
                    name="Phone2"
                    type="tel" 
                  
                    value="+994 (__) ___-__-__" 
                    pattern="^\+994(\s+)?\(?(77|55|50|70|51|99)\)?(\s+)?[0-9]{3}-?[0-9]{2}-?[0-9]{2}$">
                       </div>  
              <div class="InputDiv ProductOwner"  id="Home">
            <span class="Inputcheckbox" >
              <input type="checkbox"name="CommentStatus"> <span>Rəy bildirmək?</span> 
             </span>
           </div>
        
                        <div class="InputDiv" >
  <button class="btn btn-warning"> <i class="fa fa-plus Plus"></i> Düzənləməyi təsdiqlə</button>     

						
                            </div>

</form>
        </div>
        <div class="ProductAddDescriptionHelp">
          <ul>
            <b class="ProductAddDescriptionHelpWebSiteName">Siav.Az Elan  Qaydaları.</b>
            <li><i class="fa fa-star-of-life"></i> İşarətlənmiş yerləri boş qoymayın.</li>
            <li>Məhsulun adını nömrəsini v.s hərə öz yerində olsun.  </li>
          <li>Başqasının elanını kopyalayıp yerləştirmə hesabınız bir müddət bağlanılacaqdır.</li>
          <li>Qadağan olunmuş məhsulları qoyulmasın.</li>
          <li>Hansısa marka ile bağlı reklam vermə.</li>
          </ul>
         
        </div>
        <div class="QrCodeDiv">
          
          <img src="~/Shopping/WebSiteQrCode/QrCode.PNG" class="WebSiteQrCode" alt="">
          <p class="QrCodeHelp">Hesabı QrCode ilə rahatca tap. </p>
        </div>
      </div>
    </div>
    <script src="~/js/ProductAdd/ProductAdd.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js"></script>

</body>
</html>

