@using Shopping.Areas.Admin.Models.Roles
@model List<RoleAssignViewModel>
@{
    
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    
}
<br />
<div class="ml-10 mr-10">
<form method="post">
@for (int i = 0; i < Model.Count; i++)
{
    <div class="form-check">
    <input type="hidden" asp-for="@Model[i].RoleId" />
    <input type="hidden" asp-for="@Model[i].Name" />
    <input type="checkbox" asp-for="@Model[i].Exists" class="form-check-input"/>
    <label class="form-check-label" for="@Model[i].Exists">@Model[i].Name</label>
    </div>
}
	<br />
	<button class="btn btn-outline-info">Rol Vermek</button>
</form>
<a href="/Admin/AdminRoles/RoleList" class="btn btn-outline-primary">Role List</a>

</div>