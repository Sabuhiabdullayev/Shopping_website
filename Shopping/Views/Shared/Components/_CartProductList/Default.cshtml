@using EntityLayer.Concrete
@model IEnumerable<Cart>

		@if(@Model.Count() == 0)
{

		<button class="ProductListSelectBtn" data-id="@ViewBag.CartProductId"><i class="fa-regular fa-heart ProductListSelectIcon"></i></button>
	

}


	@foreach(var x in Model)
	{
    @if(ViewBag.CartProductId == null)
   {
   <button class="ProductListSelectBtn" data-id="@ViewBag.CartProductId"><i class="fa-regular fa-heart ProductListSelectIcon" ></i></button>
		
   }else{
          <button class="ProductListDeSelectBtn" data-id="@x.CartId"><i class="fa-regular fa-heart ProductListSelectIcon"><i class="fa fa-heart AddProductListSelectIcon"></i></i></button>

   }

	 }




